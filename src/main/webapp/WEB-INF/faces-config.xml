<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
            http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
              version="2.2">

    <application>
        <el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
    </application>

    <validator>
        <display-name>EmployeeIDValidator</display-name>
        <validator-id>EmployeeIDValidator</validator-id>
        <validator-class>com.sg.oracle.sg_management.validation.EmployeeIDValidator</validator-class>
    </validator>

    <validator>
        <display-name>TCKNValidator</display-name>
        <validator-id>TCKNValidator</validator-id>
        <validator-class>com.sg.oracle.sg_management.validation.TCKNValidator</validator-class>
    </validator>

</faces-config>
